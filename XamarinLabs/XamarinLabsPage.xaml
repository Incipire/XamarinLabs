<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:XamarinLabs" 
    xmlns:Core="clr-namespace:Incipire.Mobile.Primitives;assembly=Incipire.MobileCore"
    x:Class="XamarinLabs.XamarinLabsPage">
    <Core:Ellipse 
        HorizontalOptions="Center"
        VerticalOptions="Center"
        HeightRequest="400" 
        WidthRequest="200" 
        StrokeWidth="10"
        x:Name="ellipse">
        <Core:Ellipse.GestureRecognizers>
            <TapGestureRecognizer Tapped="Handle_Tapped"/>
        </Core:Ellipse.GestureRecognizers>
        <Core:Ellipse.Fill>
            <!--<Core:SolidColorBrush Color="Red"/>-->
            <Core:GradientBrush>
                <Core:GradientBrush.ColorStops>
                    <Core:ColorStop Color="Red" Postion="0.0"/>
                    <Core:ColorStop Color="White" Postion="0.5"/>
                    <Core:ColorStop Color="Blue" Postion="1.0"/>
                </Core:GradientBrush.ColorStops>
            </Core:GradientBrush>
        </Core:Ellipse.Fill>
        <Core:Ellipse.Stroke>
            <Core:SolidColorBrush Color="Olive"/>
        </Core:Ellipse.Stroke>
    </Core:Ellipse>
</ContentPage>
